@model IEnumerable<PRN222_BookShop.Models.Order>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Quản lý đơn hàng</h4>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <p class="text-center text-muted">Không có đơn hàng nào.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover text-center align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Mã đơn</th>
                                        <th>Ngày đặt</th>
                                        <th>Tổng tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td>@order.OrderID</td>
                                            <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                                            <td class="text-danger fw-bold">@string.Format("{0:#,##0} đ", order.TotalAmount)</td>
                                            <td>
                                                <span class="badge @(order.Status == "Process" ? "bg-warning text-dark" : "bg-success")">
                                                    @order.Status
                                                </span>
                                            </td>
                                            <td>
                                                @if (order.Status == "Process")
                                                {
                                                    <form asp-action="Confirm" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@order.OrderID" />
                                                        <button type="submit" class="btn btn-success btn-sm me-1">
                                                            <i class="fas fa-check"></i> Xác nhận
                                                        </button>
                                                    </form>
                                                    <form asp-action="Cancel" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@order.OrderID" />
                                                        <button type="submit" class="btn btn-danger btn-sm">
                                                            <i class="fas fa-times"></i> Hủy
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
