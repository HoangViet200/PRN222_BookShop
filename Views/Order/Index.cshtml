@model IEnumerable<PRN222_BookShop.Models.Order>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Đơn hàng của tôi</h3>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <p class="text-center text-muted">Bạn chưa có đơn hàng nào.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover text-center align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Mã đơn</th>
                                        <th>Ngày đặt</th>
                                        <th>Tổng tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Chi tiết</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td>@order.OrderID</td>
                                            <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                                            <td>@string.Format("{0:#,##0} đ", order.TotalAmount)</td>
                                            <td>
                                                @if (order.Status == "Completed")
                                                {
                                                    <span class="badge bg-success">Completed</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">Process</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Detail" asp-route-id="@order.OrderID" class="btn btn-sm btn-info">
                                                    Xem
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
