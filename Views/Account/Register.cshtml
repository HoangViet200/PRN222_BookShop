@model PRN222_BookShop.ViewModels.RegisterViewModel


<div class="login-wrapper">
	<div class="loginbox">
		<div class="login-auth">
			<div class="login-auth-wrap">
				<div class="sign-group">
					<a asp-controller="Book" asp-action="Index" class="btn sign-up"><span><i class="fe feather-corner-down-left" aria-hidden="true"></i></span> Back To Home</a>
				</div>
				<h1>Register</h1>
				<form asp-action="Register" method="post">
					<div asp-validation-summary="All" class="text-danger"></div>

					<div class="input-block">
						<label class="form-label" asp-for="Username">Username <span class="text-danger" asp-validation-for="Username">*</span></label>
						<input type="text" class="form-control" asp-for="Username">
					</div>
					<div class="input-block">
						<label class="form-label" asp-for="Email">Email <span class="text-danger" asp-validation-for="Email">*</span></label>
						<input type="email" class="form-control" asp-for="Email">
					</div>
					<div class="input-block">
						<label class="form-label" asp-for="Password">Password <span class="text-danger" asp-validation-for="Password">*</span></label>
						<div class="pass-group">
							<input type="password" class="form-control pass-input" asp-for="Password">
							<span class="fas fa-eye-slash toggle-password"></span>
						</div>
					</div>
					<div class="input-block">
						<label class="form-label" asp-for="ConfirmPassword">Password <span class="text-danger" asp-validation-for="ConfirmPassword">*</span></label>
						<div class="pass-group">
							<input type="password" class="form-control pass-input" asp-for="ConfirmPassword">
							<span class="fas fa-eye-slash toggle-password"></span>
						</div>
					</div>
					<button type="submit" class="btn btn-outline-light w-100 btn-size mt-1">Register</button>
					<div class="text-center dont-have">Already have an Account? <a asp-controller="Account" asp-action="Login">Sign In</a></div>
				</form>
			</div>
		</div>
	</div>
</div>